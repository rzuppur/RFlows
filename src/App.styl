@import "~@/shared.styl"

.main-container
  display flex
  overflow hidden

  .sidebar,
  .mainbar
    max-height 100%
    min-width 0

  .sidebar
    background $color-sidebar-background
    flex 0 0 $sidebar-width
    position relative
    overflow hidden
    color #fff

    .connection-error, .user
      padding 10px 10px 0

    .connection-error,
    .user,
    .search
      width $sidebar-width

    .search
      padding 10px 10px 0

      .input
        background transparent
        transition all 0.1s
        border-color alpha(#fff, 0.2)
        color #fff

        &::placeholder
          color #fff
          opacity 0.6

        &:hover
          background alpha(#fff, 0.05)

        &:focus
          background #fff
          color $color-text
          &::placeholder
            color $color-text

  .mainbar
    flex 4
