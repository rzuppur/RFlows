input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
  -webkit-appearance none

img.avatar
  border-radius 100px
  width 42px
  height 56px
  &.avatar-small
    width 30px
    height 40px

.user-with-name
  display flex
  align-items center
  overflow hidden

  .avatar
    margin-right 10px
    flex 0 0 auto

  .text
    overflow hidden
    flex 1 1 auto

  .name
    text-title-20()

  .button
    background transparent
    border-color transparent
    align-self flex-start
    margin-top 4px
    margin-left 10px
    color alpha(#000, 0.5)

    &:hover
      background alpha(#000, 0.05)

.loading-dots:after
  content "..."
  animation loadingDots 0.5s infinite alternate

@keyframes loadingDots
  0%
    content ""
  25%
    content "."
  50%
    content ".."
  75%
    content "..."


.expand-button
  $button-size = 34px
  margin 1px
  width $button-size
  height $button-size
  border 1px solid $color-gray-border
  background none
  outline none
  border-radius ($button-size / 2)
  vertical-align middle
  position relative
  cursor pointer

  @media all and (hover)
    &:hover
      background $color-light-gray-background

    &:focus
      box-shadow 0 0 0 0.125em rgba(50,115,220,.25)
      border-color #3273dc


  &:before,
  &:after
    transition all 0.12s
    content ""
    width 2px
    height 16px
    background $color-gray-text
    position absolute

  &:before
    left ($button-size / 2) - 2
    top ($button-size / 2) - 8.5
    transform rotate(90deg)

  &:after
    left ($button-size / 2) - 2
    top ($button-size / 2) - 8.5

  &.expanded
    &:before
      transform rotate(45deg)
    &:after
        transform rotate(-45deg)

.popup-menu-container
  position relative

  .popup-menu
    position absolute
    left 0
    right 0
    top 0
    margin-top 2px
    padding 5px 0
    background #fff
    border 1px solid $color-gray-border
    border-radius $border-radius
    box-shadow 0 2px 5px alpha(#000, 0.1)
    z-index 100

    .popup-menu-item
      padding 7px 10px
      margin 0 -1px
      color $color-text
      text-align left
      user-select none
      cursor pointer

      &.active
        background $color-light-blue-background

      &:hover
        background $color-focus-blue
        color #fff

.workspace
  display flex
  align-items center
  margin-top -10px
  margin-bottom 25px

  .text
    flex 1
    padding-right 10px
    min-width 0

    .name,
    .desc
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

    .name
      text-title-20()
      margin-top -5px

    .desc
      text-uppercase-13()
      color $color-gray-text
      margin-bottom -4px

  .logo
    width 42px
    height @width
    border-radius $border-radius

p.disabled
  opacity .6
  pointer-events none
  cursor disabled
  color $color-gray-text-light

  *
    color $color-gray-text-light
