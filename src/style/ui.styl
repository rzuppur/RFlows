input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
  -webkit-appearance none

img.avatar
  border-radius 100px
  width 42px
  height 56px
  &.avatar-small
    width 30px
    height 40px

.user-with-name
  display flex
  align-items center
  overflow hidden

  .avatar
    margin-right 10px

  .text
    overflow hidden

  .name
    text-title-20()

  .button
    background transparent
    border-color transparent
    align-self flex-start
    margin-top 4px
    margin-left 10px
    color alpha(#000, 0.5)

    &:hover
      background alpha(#000, 0.05)

.loading-dots:after
  content "..."
  animation loadingDots 0.5s infinite alternate

@keyframes loadingDots
  0%
    content ""
  25%
    content "."
  50%
    content ".."
  75%
    content "..."


.expand-button
  $button-size = 34px
  margin 1px
  width $button-size
  height $button-size
  border 1px solid $color-gray-border
  background none
  outline none
  border-radius ($button-size / 2)
  vertical-align middle
  position relative
  cursor pointer

  @media all and (hover)
    &:hover
      background $color-light-gray-background

    &:focus
      box-shadow 0 0 0 0.125em rgba(50,115,220,.25)
      border-color #3273dc


  &:before,
  &:after
    transition all 0.12s
    content ""
    width 2px
    height 16px
    background $color-gray-text
    position absolute

  &:before
    left ($button-size / 2) - 2
    top ($button-size / 2) - 8.5
    transform rotate(90deg)

  &:after
    left ($button-size / 2) - 2
    top ($button-size / 2) - 8.5

  &.expanded
    &:before
      transform rotate(45deg)
    &:after
        transform rotate(-45deg)



