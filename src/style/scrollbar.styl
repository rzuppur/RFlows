.scrollbar-style
  &::-webkit-scrollbar
    width 8px
  &::-webkit-scrollbar-track
    background-color #dfdfdf
    border-radius 0
  &::-webkit-scrollbar-thumb
    border-radius 4px
    min-height 40px
    background rgba(0, 0, 0, 0.2)
  &::-webkit-scrollbar-thumb:window-inactive
    background rgba(0, 0, 0, 0.15)