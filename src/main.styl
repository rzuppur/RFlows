/*
Use file watcher, compile to /assets/main.css

IntelliJ conf:
  Arguments: $FileName$ --out assets
  Pattern: file:src/main.styl||file:src/shared.styl||file:src/style/*.styl
*/

@import "style/bulma.styl"
@import "shared.styl"

/*
OVERRIDES
 */

$color-button-cta = lighten($color-blue, 10%)
$color-blue = #2097e8
$color-text = #363d4c

$font-weight-sans-bold = 500

/*
RVC
 */

@import "../node_modules/@rzuppur/rvc/src/styles/main.styl"

/*
OTHER
 */

@import "style/utils.styl"

html, body
  overflow hidden

.container-wide,
.container-medium,
.container-small,
.container-tiny
  padding 20px
  margin 0 auto

.container-wide
  max-width 1200px

.container-medium
  max-width 870px

.container-small
  max-width 500px

.container-tiny
  max-width 380px

.body-content.modalsOpen
  user-select none
  user-focus none
  pointer-events none

@import "style/scrollbar.styl"
@import "style/typo.styl"
@import "style/ui.styl"
