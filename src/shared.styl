/*
TYPOGRAPHY
 */

tracking(fontSize)
  letter-spacing round(-0.017+(0.202*(2.71828**(-0.175*fontSize))), 3)em

lineHeightRounded(fontSize, lineHeight)
  line-height round(lineHeight*fontSize)px

leading(fontSize)
  lineHeightRounded(fontSize, 1.4)

createTextStyle(size, weight=400)
  font-size size*1px
  tracking(size)
  leading(size)
  font-weight weight

text-regular-13()
  createTextStyle(13)

text-bold-13()
  createTextStyle(13, 600)

text-uppercase-13()
  createTextStyle(13, 600)
  text-transform uppercase
  letter-spacing 0.08em

text-regular-16()
  createTextStyle(16)

text-bold-16()
  createTextStyle(16, 600)

text-title-20()
  createTextStyle(20, 600)
  lineHeightRounded(20, 1.2)

text-regular-24()
  createTextStyle(24)

text-bold-24()
  createTextStyle(24, 600)

text-regular-30()
  createTextStyle(30)
  lineHeightRounded(30, 1.25)

text-bold-30()
  createTextStyle(30, 600)
  lineHeightRounded(30, 1.25)

text-regular-40()
